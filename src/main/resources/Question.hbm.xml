<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="examination.DataLayer.models.Question" table="questions">
        <meta attribute="class-description">
            This class contains questions detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="typeCode" column="type" type="int"/>
        <property name="text" column="text" type="string"/>
    </class>
    <class name="examination.DataLayer.models.Exam" table="exams">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="courseId" column="courseId" type="long"/>
        <property name="studentId" column="studentId" type="long"/>
        <property name="timeStart" column="timeStart" type="time"/>
        <property name="timeFinish" column="timeFinish" type="time"/>
        <property name="currentQuestion" column="currentQuestion" type="long"/>

    </class>
</hibernate-mapping>