<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="examination.DataLayer.models.User" table="users">


        <id name="id" type="long" column="user_id">
            <generator class="native"/>
        </id>
        <property name="username" type="string">
            <column name="username" length="45" />
        </property>
            <property name="password" type="string">
                <column name="password" length="60" not-null="true" />
            </property>
            <set name="userRole" table="user_roles" inverse="true" fetch="select">
                <key>
                    <column name="user_id" not-null="true" />
                </key>
                <one-to-many class="examination.DataLayer.models.UserRole" />
            </set>
        </class>
</hibernate-mapping>