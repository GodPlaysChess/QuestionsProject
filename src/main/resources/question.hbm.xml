<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="examination.DataLayer.models.Question" table="questions">
        <meta attribute="class-description">
            This class contains questions detail.
        </meta>
        <id name="id" type="long" column="question_id">
            <generator class="native"/>
        </id>
        <property name="typeCode" column="type" type="int"/>
        <property name="text" column="text" type="java.lang.String"/>
        <!--<property name="text" column="text" type="java.lang.String"/>-->

    </class>
</hibernate-mapping>